<body>

<h1>üê∫ Assistant du Ma√Ætre du Jeu</h1>

<div class="box">
    <h2>1Ô∏è‚É£ Ajouter des joueurs</h2>

    <input type="text" id="name" placeholder="Nom du joueur">

    <select id="role">
        <option>Villageois</option>
        <option>Loup-Garou</option>
        <option>Voyante</option>
        <option>Sorci√®re</option>
        <option>Cupidon</option>
        <option>Chasseur</option>
    </select>

    <br>
    <button onclick="addPlayer()">Ajouter</button>

    <ul id="players"></ul>
</div>

<div class="box">
    <h2>2Ô∏è‚É£ Phase de nuit</h2>

    <p id="nightText">Clique sur ‚ÄúCommencer la nuit‚Äù.</p>

    <button onclick="startNight()">Commencer la nuit</button>
    <button class="secondary" onclick="nextRole()">Suivant</button>
</div>

<script>
    const players = [];
    const order = ["Cupidon", "Voyante", "Loup-Garou", "Sorci√®re", "Chasseur"];
    let index = -1;

    function addPlayer() {
        const name = document.getElementById("name").value;
        const role = document.getElementById("role").value;

        if (name === "") return;

        players.push({ name: name, role: role, alive: true });
        document.getElementById("name").value = "";
        showPlayers();
    }

    function showPlayers() {
        const list = document.getElementById("players");
        list.innerHTML = "";

        players.forEach(p => {
            const li = document.createElement("li");
            li.textContent = p.name + " ‚Äî " + p.role;
            list.appendChild(li);
        });
    }

    function startNight() {
        index = -1;
        nextRole();
    }

    function nextRole() {
        index++;

        if (index >= order.length) {
            document.getElementById("nightText").textContent = "üåÖ Le jour se l√®ve.";
            return;
        }

        const role = order[index];
        const present = players.some(p => p.role === role && p.alive);

        if (!present) {
            nextRole();
            return;
        }

        document.getElementById("nightText").textContent =
            "üåô " + role + ", r√©veillez-vous.";
    }
</script>

